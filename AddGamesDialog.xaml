<Window x:Class="GameLauncher.Views.AddGamesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Games"
        Height="180" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1A1A1A">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Multiline input area for adding games (one per line) -->
        <Border Grid.Row="0" Background="#1e1e1e" CornerRadius="4" Padding="6">
            <TextBox x:Name="GamesTextBox"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"
                     Background="Transparent"
                     Foreground="White"
                     BorderThickness="0"
                     FontSize="12"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch"
                     SpellCheck.IsEnabled="True"
                     Padding="4"
                     ToolTip="Enter one game per line"/>
        </Border>

        <!-- Buttons: Cancel and OK (both close the dialog) -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Cancel" Width="75" Margin="0,0,10,0" Click="Cancel_Click" Background="#333" Foreground="White"/>
            <Button Content="OK" Width="75" Click="Ok_Click" Background="#333" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>