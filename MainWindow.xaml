<Window x:Class="GameLauncher.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Game Launcher" Height="600" Width="800"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <!-- Provide custom chrome so the window is borderless but still draggable/resizable.
         CaptionHeight defines the top draggable area; CornerRadius gives rounded outer corners. -->
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="40" CornerRadius="12" GlassFrameThickness="0" />
    </shell:WindowChrome.WindowChrome>

    <!-- Outer rounded container with dark background -->
    <Border Background="#0B0B0B" CornerRadius="12" Padding="10" SnapsToDevicePixels="True">
        <Grid>
            <Grid.RowDefinitions>
                <!-- Top caption area (draggable) -->
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title / drag area (keeps default functionality — the WindowChrome caption area makes this draggable) -->
            <Grid Grid.Row="0">
                <TextBlock Text="Game Launcher"
                           Foreground="White"
                           VerticalAlignment="Center"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="8,0,0,0"/>

                <!-- Show hidden checkbox (top-right) -->
                <CheckBox Content="Show hidden"
                          IsChecked="{Binding ShowHidden, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Right"
                          Margin="0,0,8,0"
                          Foreground="White"
                          Background="Transparent"
                          FontSize="12"
                          shell:WindowChrome.IsHitTestVisibleInChrome="True"/>
            </Grid>

            <!-- Main content -->
            <DockPanel Grid.Row="1" LastChildFill="True">
                <!-- Bottom bar: left = environment selector, right = Add Games button -->
                <Grid DockPanel.Dock="Bottom" Margin="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Environment selector (bottom-left) -->
                    <StackPanel Grid.Column="0"
                                Orientation="Vertical"
                                HorizontalAlignment="Left">
                        <TextBlock Text="Environment:"
                                   VerticalAlignment="Center"
                                   Foreground="White"
                                   Margin="0,0,0,5"
                                   FontSize="12"/>
                        <ComboBox ItemsSource="{Binding Environments}"
                                  SelectedValue="{Binding CurrentEnvironmentId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  SelectedValuePath="EnvId"
                                  DisplayMemberPath="EnvId"
                                  Width="150"
                                  Background="#252525"
                                  Foreground="Black"
                                  FontSize="13"
                                  Padding="4"/>
                    </StackPanel>

                    <!-- Add Games button (bottom-right) -->
                    <Button Grid.Column="2"
                            Content="Add Games"
                            Width="100"
                            Height="30"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="#252525"
                            Foreground="White"
                            FontSize="13"
                            Padding="6,2"
                            Click="OpenAddGames_Click"/>
                </Grid>

                <!-- Game list fills remaining space -->
                <ListBox x:Name="GamesList"
                         ItemsSource="{Binding Games}"
                         HorizontalContentAlignment="Stretch"
                         BorderThickness="0"
                         MouseDoubleClick="GamesList_MouseDoubleClick"
                         Background="Transparent"
                         Padding="8">

                    <!-- Ensure spacing & remove default selection chrome -->
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="6 4"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Background" Value="Transparent"/>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <!-- Card-like item with rounded corners and a cool accented border -->
                            <Border x:Name="CardBorder"
                                    CornerRadius="8"
                                    Background="#111"
                                    BorderBrush="#1FB6FF"
                                    BorderThickness="1"
                                    Padding="8"
                                    SnapsToDevicePixels="True">
                                <Grid VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="26"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Visual handle (no drag behavior) -->
                                    <Border Grid.Column="0"
                                            Width="18" Height="18"
                                            Background="#2C2C2C"
                                            CornerRadius="4"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center" />

                                    <!-- Content -->
                                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                        <TextBlock x:Name="TitleText"
                                                   Text="{Binding Title}"
                                                   FontWeight="Bold"
                                                   Foreground="White"/>
                                        <TextBlock x:Name="SubtitleText"
                                                   Text="{Binding Subtitle}"
                                                   FontSize="12"
                                                   Opacity="0.75"
                                                   Foreground="White"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding IsDisabled}" Value="True">
                                    <Setter TargetName="CardBorder" Property="Background" Value="#2C2C2C"/>
                                    <Setter TargetName="TitleText" Property="Foreground" Value="Gray"/>
                                    <Setter TargetName="SubtitleText" Property="Foreground" Value="Gray"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Grid>
    </Border>
</Window>